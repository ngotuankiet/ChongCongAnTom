<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            app:menu="@menu/item_bottom"
            android:layout_height="56dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolBar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/tv_name_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/luat_giao_thong"
                android:textSize="@dimen/sp_30"
                app:layout_constraintBottom_toBottomOf="@id/toolBar"
                app:layout_constraintLeft_toLeftOf="@id/toolBar"
                app:layout_constraintTop_toTopOf="@id/toolBar" />
            <ImageButton
                android:id="@+id/btn_setting"
                android:src="@drawable/ic_baseline_settings_24"
                android:padding="@dimen/size_10"
                android:background="@drawable/custom_no_background"
                app:layout_constraintRight_toRightOf="@id/toolBar"
                app:layout_constraintTop_toTopOf="@id/toolBar"
                app:layout_constraintBottom_toBottomOf="@id/toolBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:id="@+id/btn_laws_motorcycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/motorcycle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_law_car"
            app:layout_constraintTop_toBottomOf="@id/toolBar" />
        <Button
            android:id="@+id/btn_law_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/car"
            app:layout_constraintBottom_toBottomOf="@id/btn_laws_motorcycle"
            app:layout_constraintLeft_toRightOf="@id/btn_laws_motorcycle"
            app:layout_constraintRight_toLeftOf="@id/btn_law_more" />
        <Button
            android:id="@+id/btn_law_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more"
            app:layout_constraintBottom_toBottomOf="@id/btn_law_car"
            app:layout_constraintLeft_toRightOf="@id/btn_law_car"
            app:layout_constraintRight_toRightOf="parent" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_violation_group"
            tools:listitem="@layout/item_violation_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_laws_motorcycle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>